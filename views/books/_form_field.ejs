<%# Title field %>
<div>
  <label for="title">Title</label>
  <input type="text" name="title" value="<%= book.title %>">
</div>
<%# Author field %> 
<div>
  <label for="author">Author</label>
  <select name="author">
    <% authors.forEach(author => { %>
      <% if (author.id === book.author) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
      <% } else { %>
        <option label="<%= author.name %>" value="<%= author.id %>"></option>
      <% } %>
    <% }) %>
  </select>
</div>
<%# Publish date field %>
<div>
  <label for="publishDate">Publish Date</label>
  <input type="date" name="publishDate" value="<%= typeof book.publishDate === 'undefined' ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>
<%# Page Count field %>
<div>
  <label for="pageCount">Page Count</label>
  <input type="number" name="pageCount" min="1" max="1000" value="<%= typeof book.pageCount === 'undefined' ? '' : book.pageCount %>">
</div>
<%# Cover Image Name field %>
<div>
  <label for="cover">Cover</label>
  <input type="file" name="cover">
</div>
<%# Description field %>
<div>
  <label for="description">Description</label>
  <textarea name="description" id="textarea" cols="30" rows="10"><%= typeof book.description === 'undefined' ? '' : book.description %></textarea>
</div>